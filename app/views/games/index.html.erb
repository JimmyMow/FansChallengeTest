<style type="text/css">
  h1 {
    border-bottom: solid 1px gray;
  }

  .mini-profile {
    background: #dde1e6;
    border-radius: 5px;
  }

  #sports-feed {
  margin-top: 0px;
  background: #dde1e6;
  border-radius: 5px;
}

</style>

<div class="col-lg-4">

      <div class='dashboard-container' class='col-lg-12'>
        <div class='mini-profile'>
          <div class='mini-pic-profile-container'>
           <!--  <h1>Welcome, <a class='mini-profile-username' href="#"><%= current_user.username %></a></h1> -->
           <h1>Welcome, <%= link_to current_user.username, user_url(current_user.id), :class => 'mini-profile-username' %></h1>
          </div>
          <h3><%= link_to "#{current_user.violations.count} Challenges", user_url(current_user.id) %> </h3>
          <div class='clearfix'></div>

        </div>
      </div>


        </div>
      </div>
    </div>


    <div class='col-lg-8'>
      <div id='sports-feed'class='col-lg-12'>
        <h1 class='sports-feed-title'>Games</h1>
        <table class='table table-hover'>
          <!-- On rows -->

            <th class="active">Home Team</th>
            <th class="active">Away Team</th>
            <th class="active">Time</th>
            <th class='active'></th>

            <!-- On cells (`td` or `th`) -->

            <% @games.each do |game| %>
              <tr class=''>
              <td><%= game.away_team.name %></td>
              <td><%= game.home_team.name %></td>
              <td><%= game.date_time %></td>
              <td><%= link_to '', "#{game_url(game.id)}?home_team=#{game.home_team}&away_team=#{game.away_team}", class: 'btn btn-success   fa fa-arrow-circle-right' -%></td>
            </tr>



            <% end %>


        </table>
      <div class='clearfix'></div>
      </div>
    </div>

